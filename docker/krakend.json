{
  "version": 3,
  "name": "Krakend-Keycloak Integration",
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/auth/realms/${KC_REALM_NAME}",
      "output_encoding": "json",
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "RS256",
          "jwk-url": "http://keycloak:8080/auth/realms/${KC_REALM_NAME}/protocol/openid-connect/certs",
          "issuer": "http://keycloak:8080/auth/realms/${KC_REALM_NAME}",
          "audience": ["grafana"],
          "roles_key": "realm_access.roles"
        }
      },
      "backend": [
        {
          "url_pattern": "/auth/realms/${KC_REALM_NAME}",
          "host": ["http://keycloak:8080"],
          "whitelist": ["id", "realm", "sslRequired", "enabled", "clients", "users"],
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "static": {
                "strategy": "always"
              }
            }
          }
        }
      ]
    }
  ]
}
