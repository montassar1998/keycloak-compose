{
  "version": 3,
  "name": "Krakend-Keycloak Gateway",
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/auth/*",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/{{.env.KC_REALM_NAME}}/*",
          "host": ["{{.env.KC_HOSTNAME}}:{{.env.KC_PORT}}"]
        }
      ]
    }
  ],
  "extra_config": {
    "github.com/devopsfaith/krakend-jose/validator": {
      "alg": "RS256",
      "jwk-url": "{{.env.KC_HOSTNAME}}:{{.env.KC_PORT}}/auth/realms/{{.env.KC_REALM_NAME}}/protocol/openid-connect/certs",
      "issuer": "{{.env.KC_HOSTNAME}}:{{.env.KC_PORT}}/auth/realms/{{.env.KC_REALM_NAME}}"

  
    }
  }
}
