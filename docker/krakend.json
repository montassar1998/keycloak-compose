{
  "version": 3,
  "name": "Krakend-Keycloak Gateway",
  "port": 8000,
  "endpoints": [
    {
      "endpoint": "/auth/{proxy_path+}",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/{proxy_path+}",
          "host": ["keycloak:8080"]
        }
      ]
    }
  ],
  "extra_config": {
    "github.com/devopsfaith/krakend-jose/validator": {
      "alg": "RS256",
      "jwk-url": "keycloak:8080/auth/realms/master/protocol/openid-connect/certs",
      "issuer": "keycloak:8080/auth/realms/master"
    }
  }
}
